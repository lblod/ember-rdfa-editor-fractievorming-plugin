<div class="modal-dialog__header">
  <div class="grid">
    <div class="col--10-12">
      {{#if loadData.isRunning}}
        Aan het laden...
      {{else}}
        {{#if mandatarissen}}
          <p class="u-spacer--tiny">
            Wil u graag een tabel invoegen of beheren voor de <strong>rangorde van de fracties</strong>?
          </p>
        {{else}}
          <p class="u-spacer--tiny"><strong>Gelieve eerst gemeenteraadsleden te benoemen</strong> om een tabel in te voegen voor de fracties</p>
        {{/if}}
      {{/if}}
    </div>
  </div>
</div>

{{#if mandatarissen}}
  <div class="modal-dialog__footer">
    {{#if fetchResources.isRunning}}
      Aan het laden...
    {{else}}
      {{#wu-button-group}}
        {{#if bestuursorgaan}}
          {{#if info.node}}
            {{wu-button
              label="Bewerk tabel"
              isNarrow=true
              onClick=(action "togglePopup")
            }}
          {{else}}
            {{wu-button
              label="Ga naar tabel"
              isNarrow=true
              onClick=(action "togglePopup")
            }}
          {{/if}}
        {{/if}}
      {{/wu-button-group}}
    {{/if}}
  </div>
{{/if}}

{{# if popup}}
  {{#wu-modal
     title="Beheer de fracties en hun mandatarissen"
     dialog-class="modal-dialog--wide modal-dialog--sectioned"
     dialog-content-class="modal-dialog__content--sectioned"
     onClose=(action 'togglePopup')
     as |m|}}
    {{#m.content isSectioned=true}}
      {{editor-plugins/fractievorming-modal fracties=fracties mandatarissen=mandatarissen}}
      {{editor-plugins/fractievorming-output-table-rdfa id=outputId class="u-hidden" mandatarissen=mandatarissen}}
    {{/m.content}}
    <div class="modal-dialog__footer">
      {{#wu-button-group}}
        {{wu-button label="Voeg tabel in" class="button button--narrow" onClick=(action 'insert')}}
        {{wu-button label="Annuleer" class="button button--alt button--narrow" onClick=(action 'togglePopup')}}
      {{/wu-button-group}}
    </div>
  {{/wu-modal}}
{{/if}}
