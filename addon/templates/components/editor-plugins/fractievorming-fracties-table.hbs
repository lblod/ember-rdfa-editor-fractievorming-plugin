<table class="data-table data-table--lined data-table--zebra">
  <thead>
    <tr>
      <th>Fractienaam</th>
      <th>
        <div class="grid">
          <div class="col--4-12">
            Actie
          </div>
          <div class="col--8-12 u-align--right">
            {{#wu-link-button class="button--small" isNarrow=true onClick=(action "createFractie")}}
              <i class="vi vi-plus vi-u-s"></i>Voeg nieuwe fractie toe
            {{/wu-link-button}}
          </div>
        </div>
      </th>
    </tr>
  </thead>
  <tbody>

    {{#if createNewFractie}}
      {{editor-plugins/fractievorming-fracties-table-row creating=true
        onCreate=(action "onCreateFractie")
        onCancelCreate=(action "onCancelCreate")
        fractie=fractieToCreate
      }}
    {{/if}}

    {{#each fracties as |fractie|}}
      {{editor-plugins/fractievorming-fracties-table-row fractie=fractie onRemove=(action "onRemove")}}
    {{/each}}
  </tbody>
</table>
{{yield}}
